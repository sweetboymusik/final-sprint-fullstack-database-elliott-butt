<%- include('./partials/head.ejs') %>

<body>
  <%- include('./partials/nav.ejs') %> <%- include('./partials/header.ejs') %>
  <% if (user) { %>
  <p>
    You are already logged in! Please <a href="/auth/exit">logout</a> to login
    as a different user.
  </p>

  <% } else { %>

  <form action="/auth" method="post" class="login">
    <h2>Login</h2>
    <hr />

    <div class="form-div">
      <label for="username">Username</label>
      <input type="text" name="username" id="username" placeholder="Username" />
      <% if (status && status.includes("username")) { %>
      <span class="error-message"><%= status %></span>
      <% } else {%>
      <span class="error-message">&ThinSpace;</span>
      <% } %>
    </div>

    <div class="form-div">
      <label for="password">Password</label>
      <input
        type="password"
        name="password"
        id="password"
        placeholder="Password"
      />
      <% if (status && status.includes("password")) { %>
      <span class="error-message"><%= status %></span>
      <% } else {%>
      <span class="error-message">&ThinSpace;</span>
      <% } %>
    </div>

    <p class="reg-message">
      Don't have an account? <a href="/auth/new">Register Here</a>
    </p>

    <button type="submit">Login</button>
  </form>

  <% } %>
</body>
